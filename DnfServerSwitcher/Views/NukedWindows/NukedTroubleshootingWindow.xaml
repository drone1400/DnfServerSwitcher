<themes:NukedWindow x:Class="DnfServerSwitcher.Views.NukedWindows.NukedTroubleshootingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DnfServerSwitcher.Views"
        xmlns:themes="clr-namespace:DnfServerSwitcher.Themes"
        xmlns:viewModels="clr-namespace:DnfServerSwitcher.ViewModels"
        mc:Ignorable="d"
        Title="DNF 2011 Server Switcher - Troubleshooting"
        Height="480" Width="640"
        MinHeight="480" MinWidth="640"
        MaxHeight="480" MaxWidth="640"
        Icon="../../Resources/nukeswitch.ico"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <local:Troubleshooting Grid.Row="0" />
        
        <Button Grid.Row="2" 
                Margin="16"
                Width="220" Height="32"
                Content="OK"
                Click="ButtonBase_OnClick"/>
    </Grid>
</themes:NukedWindow>
